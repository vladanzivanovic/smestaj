{% extends 'Admin/base.html.twig' %}

{% block title %}Zaposlenje #{{ id }}{% endblock %}
{% block bodyClass %}about-us-edit{% endblock %}
{% block content %}

    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Zahtev za zaposlenje #'~id    } %}
    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Zahtev za zaposlenje #{{ id }}</h4>
        </div>
        <div class="d-flex align-items-center flex-wrap text-nowrap">
            Datum prijave: {{ applyingDate }}
{#            <a href="{{ path('admin.add_job') }}" class="btn btn-primary btn-icon-text mb-2 mb-md-0">#}
{#                <i class="btn-icon-prepend" data-feather="download-cloud"></i>#}
{#                Datum prijave#}
{#            </a>#}
        </div>
    </div>
    <div class="profile-page tx-13">
        <div class="row profile-body grid-margin">
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Lični podaci</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ime i prezime:</label>
                            <p class="text-muted">{{ fullName }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Datum rođenja:</label>
                            <p class="text-muted"{{ birthDate }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Broj telefona:</label>
                            <p class="text-muted">{{ mobilePhone }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Email:</label>
                            <p class="text-muted">{{ email }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Mesto:</label>
                            <p class="text-muted">{{ city }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ulica i broj:</label>
                            <p class="text-muted">{{ address }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Obrazovanje</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Naziv završene škole / fakulteta:</label>
                            <p class="text-muted">{{ school }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Stepen stručne spreme:</label>
                            <p class="text-muted">{{ schoolLevel }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Stečeno zvanje:</label>
                            <p class="text-muted">{{ schoolTitle }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Radno mesto prijave</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Pozicija:</label>
                            <p class="text-muted">{{ position }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">CV:</label>
                            <p class="text-muted"><a href="{{ cv }}">Preuzmi te biografiju</a> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="d-none d-md-block col-md-12 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Propratno pismo</h6>
                        </div>
                        <p class="text-muted">{{ accompanyingLetter }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}