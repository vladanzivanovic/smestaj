{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje / Izmena kategorije{% endblock %}

{% block content %}
    {% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_category_page' %}
    {% set parentRs = IS_EDIT and category.parent is not null ? category.parent.translationByLocale('rs').first() : '' %}

    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena kategorije' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}

    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Dodavanje - izmena kategorije</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <form id="edit_form" enctype="multipart/form-data">
                        <div class="row">
                            {% for language in languages %}
                                {% set trans = IS_EDIT ? category.translationByLocale(language.code) : '' %}
                                <div class="col-sm-6 col-md-4">
                                    <div class="form-group">
                                        {{ form.input('Naziv - '~language.name|upper, 'title_'~language.code, IS_EDIT ? trans.title : '', language.code~'_title') }}
                                    </div>
                                </div><!-- Col -->
                            {% endfor %}
                            <div class="col-sm-6 col-md-4">
                                <div class="form-group">
                                    {{ form.select('Glavna kategorija', 'parent_category', 'parent_category', parentRs is not empty ? parentRs.slug : '', options, '', 'w-100') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-check form-check-inline">
                                    {% set clothes = constant('App\\Entity\\Category::WEAR_CLOTHES') %}
                                    {{ form.radio('clothes' | trans, 'wear_category', clothes, 'wear_category', 'form-check-label', 'form-check-input', IS_EDIT and category.wear == clothes ? 'checked=checked' : null) }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-3">
                                <div class="form-check form-check-inline">
                                    {% set shoes = constant('App\\Entity\\Category::WEAR_SHOES') %}
                                    {{ form.radio('shoes' | trans, 'wear_category', shoes, 'wear_category', 'form-check-label', 'form-check-input', IS_EDIT and category.wear == shoes ? 'checked=checked' : null) }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </form>
                    {{ form.button('category_submit', 'btn btn-primary submit', 'Saƒçuvaj', 'button') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ app.request.attributes.has('slug') ? 1 : 0 }};
        const SLUG = '{{ app.request.attributes.get('slug') }}';
    </script>
{% endblock %}