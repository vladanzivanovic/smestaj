{% extends 'Admin/base.html.twig' %}

{% block title %}Saradnici #{{ id }}{% endblock %}
{% block bodyClass %}about-us-edit{% endblock %}
{% block content %}

    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Zahtev za saradnju #'~id    } %}
    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Zahtev za saradnju #{{ id }}</h4>
        </div>
        <div class="d-flex align-items-center flex-wrap text-nowrap">
            Datum prijave: {{ applyingDate }}
{#            <a href="{{ path('admin.add_job') }}" class="btn btn-primary btn-icon-text mb-2 mb-md-0">#}
{#                <i class="btn-icon-prepend" data-feather="download-cloud"></i>#}
{#                Datum prijave#}
{#            </a>#}
        </div>
    </div>
    <div class="profile-page tx-13">
        <div class="row profile-body grid-margin">
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Osnovni podaci</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ime i prezime:</label>
                            <p class="text-muted">{{ fullName }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Broj telefona:</label>
                            <p class="text-muted">{{ phone }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Email:</label>
                            <p class="text-muted">{{ email }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Website:</label>
                            <p class="text-muted">{{ website }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Lokacija radnje</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Imate prostor:</label>
                            <p class="text-muted">{{ hasStore }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Lokacija:</label>
                            <p class="text-muted">{{ location }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Tržni centar:</label>
                            <p class="text-muted">{{ shoppingMall }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ukupna kvadratura:</label>
                            <p class="text-muted">{{ spaceSize }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ukupno spratova:</label>
                            <p class="text-muted">{{ noFloors }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Ulica i broj:</label>
                            <p class="text-muted">{{ address }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Mesto:</label>
                            <p class="text-muted">{{ city }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Poštanski broj:</label>
                            <p class="text-muted">{{ zipCode }}</p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Država:</label>
                            <p class="text-muted">{{ country }}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-none d-md-block col-md-4 left-wrapper">
                <div class="card rounded">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <h6 class="card-title mb-0">Dokumentacija</h6>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Plan ili potografije:</label>
                            <p class="text-muted"><a href="{{ plan_doc }}">Preuzmi</a> </p>
                        </div>
                        <div class="mt-3">
                            <label class="tx-11 font-weight-bold mb-0 text-uppercase">Prezentacija kompanije:</label>
                            <p class="text-muted"><a href="{{ presentation_doc }}">Preuzmi</a> </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}