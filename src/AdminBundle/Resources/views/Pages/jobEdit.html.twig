{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje/Izmena radnog mesta{% endblock %}
{% block bodyClass %}job-edit{% endblock %}
{% set isEdit = routeName() == 'admin.edit_job' %}
{% block content %}


    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena radnog mesta' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}

    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Radno mesto</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Veličine glavne slika</h4>
                    <ul>
                        <li>1060x1580</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <form id="edit_form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Glavna slika</h6>
                        <div class="row">
                            {% include 'Moduls/dropzone.html.twig' with {'dropzoneName': 'job', 'class': 'dropzone-dark w-100', 'maxFiles': 1} %}
                        </div><!--Row-->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Hrvatski</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.input('Naziv *', 'job_title_rs', isEdit ? rs_title : null , 'rs_title') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        {{ form.textarea('Detaljan opis *', 'job_description_rs', isEdit ? rs_description : null , 'rs_description', 10, '', 'form-control') }}
                                    </div>
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Engleski</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.input('Naziv *', 'job_title_en', isEdit ? en_title : null , 'en_title') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <div class="form-group">
                                        {{ form.textarea('Detaljan opis *', 'job_description_en', isEdit ? en_description : null , 'en_description', 10, '', 'form-control') }}
                                    </div>
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
    </form>
    {{ form.button('job_submit', 'btn btn-outline-primary submit', 'Sačuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ isEdit ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';

        {% if isEdit %}
            const IMAGES = JSON.parse('{{ selectedImages|json_encode()|raw }}');
        {% endif %}
    </script>
{% endblock %}