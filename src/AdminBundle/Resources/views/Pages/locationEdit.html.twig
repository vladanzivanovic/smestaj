{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje/Izmena loakcije{% endblock %}
{% block bodyClass %}location-edit{% endblock %}
{% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_location_page' %}
{% block content %}


    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena lokacije' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}
    {% import 'Admin/Macros/Inputs/input.html.twig' as inputs %}


    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Lokacija - 1060x1580</h4>
        </div>
    </div>

    <form id="edit_form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Hrvatski</h6>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Naziv', 'title_rs', IS_EDIT ? rs_title : '', 'rs_title') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Ulica i broj', 'street_rs', IS_EDIT ? rs_street : '', 'rs_street') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Mesto', 'city_rs', IS_EDIT ? rs_city : '', 'rs_city') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Poštanski broj', 'zip_code', IS_EDIT ? zip_code : '', 'zip_code') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Država', 'country_rs', IS_EDIT ? rs_country : '', 'rs_country') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.textarea('Kratak opis', 'description_rs', IS_EDIT ? rs_description : '', 'rs_description', 10, '', 'form-control') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Engleski</h6>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Naziv', 'title_en', IS_EDIT ? en_title : '', 'en_title') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Ulica i broj', 'street_en', IS_EDIT ? en_street : '', 'en_street') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Mesto', 'city_en', IS_EDIT ? en_city : '', 'en_city') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Država', 'country_en', IS_EDIT ? en_country : '', 'en_country') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.textarea('Kratak opis', 'description_en', IS_EDIT ? en_description : '', 'en_description', 10, '', 'form-control') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Dodatni podaci</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Radno vreme radnim danima', 'working_hours', IS_EDIT ? working_hours : '', 'working_hours') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Radno vreme vikendom', 'working_hours_weekend', IS_EDIT ? working_hours_weekend : '', 'working_hours_weekend') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Email', 'email', IS_EDIT ? email : '', 'email') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Telefon', 'telephone', IS_EDIT ? telephone : '', 'telephone') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Mapa</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                {{ include('Moduls/googleMaps.html.twig') }}
                            </div><!-- Col -->

                        </div><!-- Row -->

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Slike</h6>
                        <div class="row">
                            {% include 'Moduls/dropzone.html.twig' with {'dropzoneName': 'location', 'class': 'dropzone-dark w-100', 'maxFiles': 10000} %}
                        </div><!--Row-->
                    </div>
                </div>
            </div>
        </div>

    </form>
    {{ form.button('location_submit', 'btn btn-outline-primary submit', 'Sačuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ IS_EDIT ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';


        {% if IS_EDIT %}
        const IMAGES = JSON.parse('{{ selectedImages|json_encode()|raw }}');
        const LAT = {{ lat }};
        const LNG = {{ lng }};
        {% endif %}
    </script>
{% endblock %}