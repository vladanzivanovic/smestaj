{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje / Izmena veličina{% endblock %}

{% block content %}
    {% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_size_page' %}
    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena veličina' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}


    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Dodavanje - izmena veličina</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 stretch-card">
            <div class="card">
                <div class="card-body">
                    <form id="edit_form" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-sm-6 col-md-4">
                                <div class="form-group">
                                    {{ form.input('Veličina', 'title', IS_EDIT ? size.size : '', 'title') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </form>
                    {{ form.button('size_submit', 'btn btn-primary submit', 'Sačuvaj', 'button') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ app.request.attributes.has('slug') ? 1 : 0 }};
        const SLUG = '{{ app.request.attributes.get('slug') }}';
    </script>
{% endblock %}