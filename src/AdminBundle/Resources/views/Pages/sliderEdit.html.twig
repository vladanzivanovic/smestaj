{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje/Izmena slider{% endblock %}
{% block bodyClass %}slider-edit{% endblock %}
{% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_slider_page' %}
{% block content %}


    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena slidera' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}

    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Slider - 2500x1230</h4>
        </div>
    </div>

    <form id="edit_form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Slika</h6>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Desktop slika</label>
                                {% include 'Moduls/dropzone.html.twig' with {'dropzoneName': 'slider', 'class': 'dropzone-dark w-100', 'maxFiles': 1} %}
                            </div>
                            <div class="col-sm-6">
                                <label>Mobilna slika</label>
                                {% include 'Moduls/dropzone.html.twig' with {'dropzoneName': 'slider_mobile', 'class': 'dropzone-dark w-100', 'maxFiles': 1} %}
                            </div>
                        </div><!--Row-->
                    </div>
                </div>
            </div>
        </div>
        {% for language in languages %}
            {%  set trans = IS_EDIT ? shipping.translationByLocale(language.code) : '' %}
            <div class="row">
                <div class="col-md-12 grid-margin">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">{{ language.name|upper }}</h6>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        {{ form.textarea('Kratak opis', 'description_'~language.code, IS_EDIT ? trans.description : '', language.code~'_description', 10, '', 'form-control') }}
                                    </div>
                                </div><!-- Col -->
                            </div><!-- Row -->
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form.input('Teks dugmeta', 'button_'~language.code, IS_EDIT ? rs_button : '', language.code~'_button') }}
                                    </div>
                                </div><!-- Col -->
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        {{ form.input('Link', 'link_'~language.code, IS_EDIT ? rs_link : '', language.code~'_link') }}
                                    </div>
                                </div><!-- Row -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Pozicija teksta</h6>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-check form-check-inline">
                                    {{ form.radio('Levo', 'text_position_1', 1, 'position', 'form-check-label', 'form-check-input', IS_EDIT and position == 1 ? 'checked=checked' : null) }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-check form-check-inline">
                                    {{ form.radio('Sredina', 'text_position_2', IS_EDIT ? position : 2, 'position', 'form-check-label', 'form-check-input', IS_EDIT and position == 2 ? 'checked=checked' : null) }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-check form-check-inline">
                                    {{ form.radio('Desno', 'text_position_3', IS_EDIT ? position : 3, 'position', 'form-check-label', 'form-check-input', IS_EDIT and position == 3 ? 'checked=checked' : null) }}
                                </div>
                            </div><!-- Col -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    {{ form.button('slider_submit', 'btn btn-outline-primary submit', 'Saƒçuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ IS_EDIT ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';

        {% if IS_EDIT %}
            const IMAGES = JSON.parse('{{ selectedImages|json_encode()|raw }}');
        {% endif %}
    </script>
{% endblock %}