{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje/Izmena teksta{% endblock %}
{% block bodyClass %}slider-edit{% endblock %}
{% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_slider_text_page' %}
{% block content %}


    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena slider teksta' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}

    <form id="edit_form" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Hrvatski</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.input('Tekst', 'description_rs', IS_EDIT ? rs_description : '', 'rs_description') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Link', 'link_rs', IS_EDIT ? rs_link : '', 'rs_link') }}
                                </div>
                            </div><!-- Row -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Engleski</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.input('Tekst', 'description_en', IS_EDIT ? en_description : '', 'en_description') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    {{ form.input('Link', 'link_en', IS_EDIT ? en_link : '', 'en_link') }}
                                </div>
                            </div><!-- Row -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    {{ form.button('slider_text_submit', 'btn btn-outline-primary submit', 'Saƒçuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ IS_EDIT ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';
    </script>
{% endblock %}