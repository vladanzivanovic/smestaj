{% extends 'Admin/base.html.twig' %}

{% block title %}Dodavanje/Izmena korisnika{% endblock %}
{% block bodyClass %}location-edit{% endblock %}
{% set IS_EDIT = app.request.attributes.get('_route') == 'admin.edit_user_page' %}

{% set roleList = [
    {'title': 'Kupac', 'value': 'ROLE_USER'},
    {'title': 'Administrator', 'value': 'ROLE_ADMIN'},
    {'title': 'Super admin', 'value': 'ROLE_SUPER_ADMIN'},
] %}

{% block content %}


    {% include 'Admin/Components/breadcrumbs.html.twig' with {activePage: 'Dodavanje - izmena korisnika' } %}

    {% import 'Admin/Macros/Inputs/formWithLabels.html.twig' as form %}
    {% import 'Admin/Macros/Inputs/input.html.twig' as inputs %}


    <div class="d-flex justify-content-between align-items-center flex-wrap grid-margin">
        <div>
            <h4 class="mb-3 mb-md-0">Korisnik</h4>
        </div>
    </div>

    <form id="edit_form" enctype="multipart/form-data">
        {{ inputs.input('_csrf_token', csrf_token('set_user'), '_csrf_token', '', 'hidden') }}
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Osnovni podaci</h6>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Ime', 'first_name', IS_EDIT ? first_name : '', 'first_name') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Prezime', 'last_name', IS_EDIT ? last_name : '', 'last_name') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Email', 'email', IS_EDIT ? email : '', 'email', '', 'email') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Lozinka', 'password', '', 'password') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.select('Tip korisnika', 'user-select-box', 'role', IS_EDIT ? role : '' , roleList, '', 'w-100') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Adresa</h6>
                        <div class="row">
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Telefon', 'phone', IS_EDIT ? phone : '', 'phone', '', 'tel') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Ulica i broj', 'address', IS_EDIT ? address : '', 'address') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Mesto', 'city', IS_EDIT ? city : '', 'city') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Poštanski broj', 'zip_code', IS_EDIT ? zip_code : '', 'zip_code') }}
                                </div>
                            </div><!-- Col -->
                            <div class="col-sm-4">
                                <div class="form-group">
                                    {{ form.input('Država', 'country', IS_EDIT ? country : '', 'country') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title">Dodatni podaci</h6>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    {{ form.textarea('Napomena', 'note', IS_EDIT ? note : '', 'note', 10, '', 'form-control') }}
                                </div>
                            </div><!-- Col -->
                        </div><!-- Row -->
                    </div>
                </div>
            </div>
        </div>
    </form>
    {{ form.button('user_submit', 'btn btn-outline-primary submit', 'Sačuvaj', 'button') }}
{% endblock %}
{% block pageJavascript %}
    <script nonce="{{ csp_nonce('script') }}">
        const IS_EDIT = {{ IS_EDIT ? 1 : 0 }};
        const ID = '{{ app.request.attributes.get('id') }}';
    </script>
{% endblock %}