<?php

namespace SiteBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * Reservation
 *
 * @ORM\Table(name="reservation", indexes={@ORM\Index(name="ReservationAdsId", columns={"AdsId"}), @ORM\Index(name="ReservationEventTypeId", columns={"EventTypeId"}), @ORM\Index(name="IDX_42C84955358A2B23", columns={"EventCityId"}), @ORM\Index(name="ReservationClientId", columns={"ClientId"})})
 * @ORM\Entity(repositoryClass="SiteBundle\Repository\ReservationRepository")
 */
class Reservation
{
    /**
     * @var integer
     *
     * @ORM\Column(name="Id", type="integer", nullable=false)
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var string
     *
     * @ORM\Column(name="Note", type="text", length=65535, nullable=true)
     */
    private $note;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="SysModifiedTime", type="datetime", nullable=false)
     */
    private $sysmodifiedtime;

    /**
     * @var integer
     *
     * @ORM\Column(name="AdultNumber", type="integer")
     */
    private $adultnumber;

    /**
     * @var integer
     *
     * @ORM\Column(name="ChildrenNumber", type="integer")
     */
    private $childrennumber;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="CheckIn", type="date", nullable=false)
     */
    private $checkin;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="CheckOut", type="date", nullable=false)
     */
    private $checkout;

    /**
     * @var Ads
     *
     * @ORM\ManyToOne(targetEntity="Ads", inversedBy="reservations")
     * @ORM\JoinColumn(name="AdsId", referencedColumnName="Id")
     */
    private $adsid;

    /**
     * @var string
     *
     * @ORM\Column(name="FirstName", type="string", length=100)
     */
    private $firstname;

    /**
     * @var string
     *
     * @ORM\Column(name="LastName", type="string", length=100)
     */
    private $lastname;

    /**
     * @var string
     *
     * @ORM\Column(name="Email", type="string", length=255);
     */
    private $email;

    /**
     * @var string
     *
     * @ORM\Column(name="Mobile", type="string", length=100);
     */
    private $mobile;

    /**
     * @var string
     *
     * @ORM\Column(name="Viber", type="string", length=100);
     */
    private $viber;
}
