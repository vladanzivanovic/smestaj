{# src/SiteBundle/Resources/views/Site/index.html.html.twig #}
{% extends("@Site/base.html.twig") %}
{% block content %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Kontakt</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><a href="{{ path('site_index') }}">POČETNA</a></li>
                <li class="active">Kontakt</li>
            </ul>
        </div>
    </div>
    <section id="content">
        <div class="container">
            <div id="main">
                <div class="contact-address row block">
                    <div class="col-md-4">
                        <div class="icon-box style5">
                            <i class="soap-icon-phone"></i>
                            <div class="description">
                                <small>Pozovite nas</small>
                                <h5><a href="tel:{{ site_info['site_telephone'] }}">{{ site_info['site_telephone'] }}</a> </h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="icon-box style5">
                            <i class="soap-icon-message"></i>
                            <div class="description">
                                <small>Pošaljite nam email</small>
                                <h5><a href="#" onclick="tjq().scrollToPosition('#contact-form')">{{ site_info['site_email'] }}</a></h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="icon-box style5">
                            <i class="soap-icon-address"></i>
                            <div class="description">
                                <small>Podrška</small>
                                <h5>08:00 - 20:00 h</h5>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="travelo-box box-full" id="contact-form">
                    <div class="contact-form">
                        <h2>Pitajte nas</h2>
                        <form action="contact-us-handler.php" method="post">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        <label>Vaše ime i prezime</label>
                                        <input type="text" name="fullName" class="input-text full-width">
                                    </div>
                                    <div class="form-group">
                                        <label>Vaš email</label>
                                        <input type="text" name="email" class="input-text full-width">
                                    </div>
                                    <div class="form-group">
                                        <label>Tema</label>
                                        <input type="text" name="subject" class="input-text full-width">
                                    </div>
                                </div>
                                <div class="col-sm-8">
                                    <div class="form-group">
                                        <label>Vaša poruka</label>
                                        <textarea name="message" rows="10" class="input-text full-width" placeholder="write message here"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="col-sms-offset-6 col-sm-offset-6 col-md-offset-8 col-lg-offset-9">
                                <button class="btn-medium full-width">POŠALJI PORUKU</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}