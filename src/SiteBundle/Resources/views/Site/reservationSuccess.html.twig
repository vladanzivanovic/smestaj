{# src/SiteBundle/Resources/views/Site/reservationSuccess.html.html.twig #}
{% extends("@Site/base.html.twig") %}

{% set category = ads.categoryid %}
{% set parentCategory = ads.categoryid.parent %}
{% set city = ads.cityid %}
{% block content %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Rezervacija</h2>
            </div>
            <ul class="breadcrumbs pull-right">
                <li><a href="{{ path('site_index') }}">POČETNA</a></li>
                {% if(parentCategory is defined and parentCategory is not null) %}
                    <li>
                        <a href="{{ path('site_ads_view', {'category': parentCategory.alias}) }}">{{ parentCategory.name }}</a>
                    </li>
                    <li>
                        <a href="{{ path('site_ads_view', {'category': category.alias}) }}">{{ category.name }}</a>
                    </li>
                {% else %}
                    <li><a href="{{ path('site_ads_view', {'category': category.alias}) }}">{{ category.name }}</a>
                    </li>
                {% endif %}
                <li class="active">Rezervacija - {{ ads.title }}</li>
            </ul>
        </div>
    </div>
    <section id="content" class="gray-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 col-md-9">
                    <div class="booking-information travelo-box">
                        <h2>Slanje upita</h2>
                        <hr/>
                        <div class="booking-confirmation clearfix">
                            <i class="soap-icon-recommend icon circle"></i>
                            <div class="message">
                                <h4 class="main-message">Zahvaljujemo Vam se na slanju upita preko
                                    sajta {{ app_params('base_url') }}.</h4>
                                <p>Vaš upit je prosleđena oglašivaču. Odgovor ćete dobiti na email adresu.</p>
                            </div>
                        </div>
                        <hr/>
                        <h2>Detalji - #{{ reservation.id }}</h2>
                        <dl class="term-description">
                            <dt>Smeštaj:</dt>
                            <dd>{{ ads.title }}</dd>
                            <dt>Datum boravka:</dt>
                            <dd>{{ reservation.checkin.format('d.m.Y') }}
                                - {{ reservation.checkout.format('d.m.Y') }}</dd>
                            <dt>Mesto:</dt>
                            <dd>{{ ads.cityid.name }}</dd>
                            <dt>Broj odraslih:</dt>
                            <dd>{{ reservation.adultnumber }}</dd>
                            <dt>Broj dece:</dt>
                            <dd>{{ reservation.childrennumber }}</dd>
                            <dt>Kontakt putem:</dt>
                            <dd>{{ notification_type|trans }}</dd>
                        </dl>
                        {% if (reservation.note is not null) %}
                            <div>
                                <p>Dodatni tekst:</p>
                                <p>{{ reservation.note|raw }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="sidebar col-sm-4 col-md-3">
                    {% include ('@Site/Moduls/AdsInfo/suggestedAds.html.twig') %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}